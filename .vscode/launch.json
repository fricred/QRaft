{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (iOS Simulator)",
            "request": "launch",
            "type": "dart",
            "cwd": "${workspaceFolder}",
            "program": "lib/main.dart",
            "deviceId": "ios"
        },
        {
            "name": "Debug (Development)",
            "request": "launch",
            "type": "dart",
            "cwd": "${workspaceFolder}",
            "program": "lib/main.dart",
            "env": {
                "FLUTTER_WEB_USE_SKIA": "true"
            }
        },
        {
            "name": "Debug (Chrome)",
            "request": "launch",
            "type": "dart",
            "cwd": "${workspaceFolder}",
            "program": "lib/main.dart",
            "deviceId": "chrome",
            "args": [
                "--web-renderer",
                "html"
            ]
        },
        {
            "name": "Debug (Android)",
            "request": "launch",
            "type": "dart",
            "cwd": "${workspaceFolder}",
            "program": "lib/main.dart",
            "deviceId": "android"
        },
        {
            "name": "Profile Mode",
            "request": "launch",
            "type": "dart",
            "cwd": "${workspaceFolder}",
            "program": "lib/main.dart",
            "flutterMode": "profile"
        },
        {
            "name": "Release Mode",
            "request": "launch",
            "type": "dart",
            "cwd": "${workspaceFolder}",
            "program": "lib/main.dart",
            "flutterMode": "release"
        }
    ]
}